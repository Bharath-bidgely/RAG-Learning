# Application Settings
APP_NAME=RAG-Learning
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# AWS Configuration
AWS_PROFILE=AwsBedrock
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id

# AWS Bedrock (LLM & Embeddings)
# Bedrock API Key (Bearer Token) - Get from: AWS Console → Bedrock → Discover → API Keys
AWS_BEARER_TOKEN_BEDROCK=your-bedrock-api-key-here

# Model ID - Use inference profile format: {region}.{provider}.{model-version}
MODEL_ID=us.anthropic.claude-3-5-haiku-20241022-v1:0
BEDROCK_LLM_MODEL=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0
BEDROCK_RUNTIME_REGION=us-east-1

# Test Prompt (for testing)
PROMPT=Are you active? Reply briefly.

# Vector Database (AWS OpenSearch Serverless)
VECTOR_DB_TYPE=opensearch  # Options: opensearch, chromadb, faiss
OPENSEARCH_ENDPOINT=your-opensearch-endpoint.us-east-1.aoss.amazonaws.com
OPENSEARCH_INDEX_NAME=rag-vectors
OPENSEARCH_USE_SSL=true
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Embedding Settings
EMBEDDING_MODEL=text-embedding-3-small  # OpenAI model
EMBEDDING_DIMENSION=1536
EMBEDDING_BATCH_SIZE=100

# Chunking Strategy
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CHUNKING_STRATEGY=recursive  # Options: fixed, semantic, recursive

# Retrieval Settings
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7
USE_RERANKING=true
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# LLM Settings
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=30

# AWS RDS PostgreSQL
DATABASE_URL=postgresql://admin:password@rag-db.xxxxx.us-east-1.rds.amazonaws.com:5432/rag_learning
RDS_ENDPOINT=rag-db.xxxxx.us-east-1.rds.amazonaws.com
RDS_PORT=5432
RDS_DB_NAME=rag_learning
RDS_USERNAME=admin
RDS_PASSWORD=stored-in-secrets-manager

# AWS ElastiCache Redis
REDIS_ENDPOINT=rag-cache.xxxxx.cache.amazonaws.com
REDIS_PORT=6379
REDIS_DB=0
REDIS_USE_SSL=true
CACHE_TTL=3600

# AWS S3 Storage
S3_BUCKET_NAME=rag-learning-documents
S3_REGION=us-east-1

# Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
METRICS_PORT=9090

